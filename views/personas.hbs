<br><br>

<div class="container">
    <h4>Busqueda</h4>
    <form action="/api/personas/personaCurp" method="POST">

        <input class="form-control" type="text" name="curpbusca" placeholder="Introduce CURP...">
        <button class="btn btn-primary" type="submit">Buscar</button>

    </form>

</div>

<br>

<div class="table-responsive-sm">
    <table class="table text-center table-striped">

        <thead>

            <tr>
                <th class="th-sm">Apellido Paterno</th>
                <th class="th-sm">Apellido Materno</th>
                <th class="th-sm">Nombre(s)</th>
                <th class="th-sm">Fecha de Nacimiento (dd/mm/aaaa)</th>
                <th class="th-sm">Sexo</th>
                <th class="th-sm">Estado</th>
                <th class="th-sm">CURP</th>
                <th class="th-sm">Opcion</th>
            </tr>
        </thead>
        <tbody>
            {{#personas}}
            <tr>
                <td>{{ApellidoPaterno}}</td>
                <td>{{ApellidoMaterno}}</td>
                <td>{{Nombre}}</td>
                <td>{{FechaNacimiento}}</td>
                <td>{{Sexo}}</td>
                <td>{{Estado}}</td>
                <td>{{Curp}}</td>
                <td>
                    <form action="/api/persona/{{_id}}" method="GET">
                        <button class="btn btn-primary" type="submit">Borrar</button>
                    </form>
                </td>
            </tr>
            {{/personas}}
        </tbody>
    </table>
</div>